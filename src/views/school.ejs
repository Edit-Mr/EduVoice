        <style>
              main {
                padding-top: 5rem;
                transition: all 0.5s;
            }
            .intro-container {
                display: flex;
                gap: 2rem;
            }
            .intro {
                flex-grow: 1;
            }
            .box {
                background-color: #fff;
                border-radius: 1rem;
                padding: 24px;
                flex-grow: 1;
            }
            .pie-chart {
                flex: 0 0;
                display: flex;
                flex-direction: column;
                white-space: nowrap;
            }
            .pie-box {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-grow: 1;
                min-width: 14rem;
                gap: 2rem;
                line-height: 1.4;
            }
            .pie {
                width: 10rem;
                height: 10rem;
                border-radius: 50%;
                background: conic-gradient(
                    #f00 0% 10%,
                    #ff0 10% 20%,
                    #0f0 20% 100%
                );
            }
            .reporting main {
                filter: blur(10px) brightness(0.1) grayscale(0.5);
            }

            .report {
                position: fixed;
                top: 50%;
                left: 50%;
                max-width: 600px;
                width: 100%;
                background: #fff;
                padding: 3rem;
                color: #000;
                transform: translate(-50%, -50%);
                border-radius: 2rem;
                opacity: 0;
                pointer-events: none;
            }
            .reporting .report {
                opacity: 1;
                pointer-events: all;
            }
            .pie-square {
                display: inline-block;
                width: 1rem;
                height: 1rem;
                margin-right: 0.5rem;
            }

            .green {
                background-color: #0f0;
            }
            .yellow {
                background-color: #ff0;
            }
            .red {
                background-color: #f00;
            }
            .tag {
                background-color: rgb(217, 217, 217);
                color: #fff;
                padding: 0.5rem 1rem;
                font-size: 1rem;
                border-radius: 6rem;
                margin-left: 0.5rem;
            }
            .rule {
                background-color: red;
            }
            section {
                padding-block: 1rem;
            }
            h1 + p {
                margin-bottom: 0;
            }
            .confirm {
                background-color: #fffde3;
                position: relative;
            }
            .confirm h2 {
                margin-bottom: 1rem;
            }
            .confirm button,
            .report button {
                background-color: #0060df;
                color: #fff;
                outline: transparent;
                border: none;
                border-radius: 0.375rem;
                padding: 1rem;
                font-size: 16px;
                font-weight: 700;
                margin-top: 1.25rem;
                cursor: pointer;
                display: inline-block;
                margin-right: 1rem;
            }
            .report input {
                width: 100%;
                padding: 1rem;
                margin-bottom: 1rem;
                border: 1px solid #ccc;
                border-radius: 0.375rem;
            }
            .report label {
                display: block;
                margin-bottom: 0.5rem;
            }
            button:hover {
                background-color: #0053c0;
            }
            button:active {
                background-color: #0048a7;
            }
            .success {
                position: absolute;
                top: 0;
                left: 0;
                opacity: 0;
            }
            .ask,
            .success {
                transition: all 0.5s;
            }

            .success.reported {
                opacity: 1;
            }
            .ask.reported {
                opacity: 0;
            }
            .school-status {
                display: flex;
                flex-wrap: wrap;
                gap: 2rem;
            }
            .school-status > div {
                flex: 1;
            }
            .school-status h2 {
                text-align: center;
            }
            .school-status span {
                text-align: right;
            }
            .school {
                padding: 1rem;
                border-radius: 0.375rem;
                background-color: #f0f0f0;
                margin-bottom: 0.5rem;
                text-decoration: none;
                color: #000000;
                max-height: 3.21875rem;
                overflow: hidden;
                transition: all 0.5s ease-in-out;
            }
            .school > div {
                opacity: 0.5;
            }
            .school > div.school-name {
                opacity: 1;
            }

            .school:hover {
                max-height: 500px;
            }

            .school > div {
                display: flex;
                justify-content: space-between;
                margin-bottom: 1rem;
            }
            .school > div:last-child {
                margin-bottom: 0;
            }

            .x {
                position: absolute;
                top: 1rem;
                right: 1rem;
                font-size: 2rem;
                cursor: pointer;
            }
        </style>
    </head>

