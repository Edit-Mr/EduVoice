        <script>
            //scroll event
            window.addEventListener("scroll", function () {
                const registerGradient =
                    document.querySelector(".registerGradient");
                const registerMask = document.querySelector(".registerMask");
                const offset =
                    (registerGradient.getBoundingClientRect().top /
                        window.innerHeight) *
                    3;
                console.log(offset);
                if (offset > 1) {
                    registerGradient.style.opacity = 0;
                    registerMask.style.background =
                        "linear-gradient(#f5f5f7, transparent)";
                } else if (offset < 0) {
                    registerGradient.style.opacity = 1;
                    registerMask.style.background = "transparent";
                }
                {
                    registerGradient.style.opacity = 1 - offset;
                    registerMask.style.background = `linear-gradient(#f5f5f7, transparent ${
                        offset * 100
                    }%)`;
                }
            });

            //aos
            function isElementInViewport(el) {
                const rect = el.getBoundingClientRect();
                return rect.bottom < 0 || rect.top > window.innerHeight;
            }

            function addClassToVisibleElements() {
                var Elements = document.querySelectorAll(".aos");
                Elements.forEach(function (fadeInElement) {
                    if (!isElementInViewport(fadeInElement))
                        fadeInElement.classList.add("ed");
                    else fadeInElement.classList.remove("ed");
                });
            }

            document.addEventListener("scroll", addClassToVisibleElements);
            addClassToVisibleElements();
        </script>
